<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="10dp">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

        <ImageView
            android:id="@+id/displayImage"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/change_youtuber_image"/>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/youtuberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                tools:text="A Title" />

            <TextView
                android:id="@+id/youtuberChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="A Description" />


        <TextView
            android:id="@+id/youtuberRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A rating" />

        <TextView
            android:id="@+id/youtuberDobText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DOB" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/chooseFav"
                android:layout_margin="100dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
